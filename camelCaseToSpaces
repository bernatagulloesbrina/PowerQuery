(t as table) =>
let
    Source0 = Table.TransformColumnNames(t,each Text.Upper(Text.Start(_,1)) & Text.End(_,Text.Length(_)-1) ),
    Source = 
    Table.TransformColumnNames(
        Source0, 
        each Text.Combine(
            Splitter.SplitTextByPositions(
                Text.PositionOfAny(_, {"A".."Z"},2)
                ) 
                (_),
                 " ")
    )
in
    Source
